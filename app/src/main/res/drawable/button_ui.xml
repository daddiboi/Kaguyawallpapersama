<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <layer-list>
            <!-- SHADOW -->
            <item >

                <shape>
                    <solid android:color="#000000"/>
                    <!-- alttan gölge -->
                    <corners android:radius="20dp"/>
                </shape>
            </item>
            <!-- BUTTON alttan gölge
              android:right="5px" to make it round-->
            <item
                android:bottom="7px"
                android:left="6px"
                >
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:centerColor="#9E7CEF"
                        android:endColor="#B070EB"
                        android:startColor="#8989F4"
                        />
                    <corners
                        android:radius="19dp"/>
                    <padding
                        android:left="0dp"
                        android:top="4dp"
                        android:right="0dp"
                        android:bottom="0dp"
                        />
                    <size
                        android:width="125dp"
                        android:height="125dp"
                        />
                </shape>
            </item>
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <!-- BUTTON -->
            <item android:bottom="5px">
                <shape>
                    <padding android:bottom="5dp"/>
                    <gradient
                        android:centerColor="#9E7CEF"
                        android:endColor="#B070EB"
                        android:startColor="#8989F4"
                        />
                    <corners
                        android:radius="19dp"/>
                    <padding
                        android:left="10dp"
                        android:top="10dp"
                        android:right="5dp"
                        android:bottom="10dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>