<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0FF00FFC"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/set1"

        android:layout_width="154dp"
        android:layout_height="143dp"

        android:background="@drawable/button_ui"
        android:shadowColor="#FF0000"
        android:shadowDx="4"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="@string/wallpaper_set_1"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/set3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/set2"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/set2"

        android:layout_width="154dp"
        android:layout_height="143dp"
        android:layout_marginStart="30dp"

        android:background="@drawable/button_ui"
        android:shadowColor="#FF0000"
        android:shadowDx="4"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="@string/wallpaper_set_2"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/set4"
        app:layout_constraintEnd_toEndOf="@+id/set4"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/set1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.862" />

    <Button
        android:id="@+id/set4"

        android:layout_width="154dp"
        android:layout_height="143dp"
        android:background="@drawable/button_ui"

        android:shadowColor="#FF0000"
        android:shadowDx="4"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="@string/send_feedback"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/set3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.594"
        app:layout_constraintStart_toEndOf="@+id/set3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <Button
        android:id="@+id/set3"

        android:layout_width="154dp"
        android:layout_height="143dp"
        android:background="@drawable/button_ui"

        android:shadowColor="#FF0000"
        android:shadowDx="4"
        android:shadowDy="3"
        android:shadowRadius="5"
        android:text="@string/privacy_policy"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/set1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.753" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="303dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_constraintHeight_percent="0.50"
        app:srcCompat="@drawable/mainwallpaper" />
    <RelativeLayout
        android:id="@+id/banner1"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />


</androidx.constraintlayout.widget.ConstraintLayout>